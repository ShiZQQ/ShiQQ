&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">select *from user_moneys where id= 2 for update;
&lt;/span>&lt;/span>&lt;/code>&lt;/pre>&lt;/td>&lt;/tr>&lt;/table>
&lt;/div>
&lt;/div>&lt;div class="highlight">&lt;div class="chroma">
